<%- include('../partials/head') %>
<link rel="stylesheet" href="../assets/styles/main.css" />
    <title>Students Page</title>
</head>
<body>
    <%- include('../partials/navbar') %>
     <main>
    <h1>Student</h1>
    <% if (student) { %>
        <h2><%= student.firstName %>  <%= student.lastName %></h2>
        <p><%= student.age %></p>
        <p><%= student.country %></p>
        <p><%= student.skills.join(', ')%></p>
        <p><%= student.bio%></p>
        <a href="/student/<%= student._id%>/edit" class="btn btn-primary active" role="button" aria-pressed="true">Edit</a> <a href="/api/v.1.0/students/<%= student._id%>/delete" class="btn btn-primary active" role="button" aria-pressed="true">Delete</a> <a href="/students" class="btn btn-primary active" role="button" aria-pressed="true">Cancel</a>
      <% } %>
  </main> 
  <%- include('../partials/footer') %> 
</body>
</html>
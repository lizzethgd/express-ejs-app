<%- include('../partials/head') %>
<link rel="stylesheet" href="../../assets/styles/main.css" />
    <title>Edit data Page</title>
</head>
<body>
    <%- include('../partials/navbar') %>
      <main>
        <h1>Edit student</h1>
        <form action="/api/v.1.0/students/<%= student._id%>/edit" method="POST" >
         
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input
                id="firstName"
                type="text"
                name="firstName"
                value ="<%= student.firstName %>"
                placeholder="First name" />
  ​
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input
                id="lastName"
                type="text"
                name="lastName"
                value ="<%= student.lastName %>"
                placeholder="Last name" />
  ​
            </div>
            <div class="form-group">
              <label for="country">Country</label>
              <input id="country" type="text" name="country"  value ="<%= student.country %>" placeholder="Country" />
  ​
            </div>
  ​
            <div class="form-group">
              <label for="age">Age</label>
              <input type="text" id="age" name="age"  value ="<%= student.age %>" placeholder="Age" />
  ​
            </div>
  ​
            <div class="form-group">
              <label for="skills">Skills</label>
              <textarea type="text" id="skills" name="skills" cols="120" rows="5"
                value="Skills separated by comma..."><%= student.skills %></textarea>
  ​
            </div>
            
            <div class="form-group">
              <label for="bio">Your bio</label>
              <textarea id="bio" name="bio" cols="120" rows="10" placeholder="Bio"><%= student.bio %></textarea>
            </div>
  ​
  ​
            <button class="btn btn-primary" type="submit" id="submit-button">Update</button> <a href="/students" class="btn btn-primary active" role="button" aria-pressed="true">Cancel</a>
          </form>
      </main>
      <%- include('../partials/footer') %> 
</body>
</html>